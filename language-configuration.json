{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "`", "close": "`" },
    { "open": "{{", "close": "}}" },
    { "open": "<!--", "close": "-->" }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" },
    { "open": "`", "close": "`" },
    { "open": "{{", "close": "}}" }
  ],
  "colorizedBracketPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*(---|/\\*|<!--|<(script|template|style)>|\\{\\{@(if|each))",
      "end": "^\\s*(---|\\*/|-->|</(script|template|style)>|\\{\\{/(if|each)\\}\\})"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(<(?!\\?|(?:area|base|br|col|frame|hr|html|img|input|link|meta|param)\\b)[a-zA-Z][^/>]*>(?!.*</)|\\{\\{@(if|each)|<(script|template|style)>|\\{[^}]*$|\\([^)]*$|\\[[^\\]]*$)",
    "decreaseIndentPattern": "^\\s*(</[^>]+>|\\{\\{/(if|each)\\}\\}|\\{\\{:else(\\s+if)?\\}\\}|\\{\\{:elseif|\\}|\\)|\\])"
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
  "onEnterRules": [
    {
      "beforeText": "<(?!(?:area|base|br|col|embed|hr|img|input|keygen|link|menuitem|meta|param|source|track|wbr))([_:\\w][_:\\w-.\\d]*)(?:[^/>])*(?!/)>\\s*$",
      "afterText": "^\\s*</([_:\\w][_:\\w-.\\d]*)\\s*>",
      "action": { "indent": "indentOutdent" }
    },
    {
      "beforeText": "\\{\\{@(if|each)[^}]*\\}\\}\\s*$",
      "afterText": "^\\s*\\{\\{/(if|each)\\}\\}",
      "action": { "indent": "indentOutdent" }
    },
    {
      "beforeText": "^---\\s*$",
      "action": { "indent": "none" }
    }
  ]
}
